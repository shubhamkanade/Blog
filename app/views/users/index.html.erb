<% if flash.now[:alert] %>
    <div class="alert alert-warning" role="alert">
        <%= flash.now[:alert] %>
    </div>
<% end %>
<%= form_with url: users_path do |form| %>
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <%= form.text_field :name ,placeholder: "Enter Name", required: "required"%>
        <%= form.text_field :email ,placeholder: "Enter Email", required: "required", pattern: "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"%>
        <%= form.password_field :password ,placeholder: "Enter Password", required: "required"%>
        <hr>
        <%= form.submit "Register", :class => "registerbtn"%>
    </div>
    <div class="container signin">
        Already have an account? <%= link_to "LogIn", users_login_path %>
    </div>
<% end %>